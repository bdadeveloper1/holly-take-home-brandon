{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "modern-chat-pulse/*": ["app/modern-chat-pulse/*"]
    }
  },
  "include": [
    "app",
    "lib",
    "app/chat_app_front_end/modern-chat-pulse/src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
